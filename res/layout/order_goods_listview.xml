<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
   > 
    <TextView
        style="@style/textStyle"
        android:id="@+id/order_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:text=""/>
   

    <ImageView
        android:id="@+id/order_goods_add"
        android:layout_width="wrap_content"     
        android:onClick="onClick"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_height="20dp"
        android:paddingRight="10dp"
        />

    <EditText
        style="@style/listtextStyle"
        android:id="@+id/order_goods_count"
        android:layout_width="20dp"
        android:layout_toLeftOf="@+id/order_goods_add"
        android:layout_height="20dp"
        android:visibility="invisible"
        android:gravity="center"
        android:background="#fff"
      />
    
    <ImageView
        android:id="@+id/order_goods_remove"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/ic_remove_circle_outline_black_24dp"
        android:layout_toLeftOf="@id/order_goods_count"
        android:visibility="invisible"/>
</RelativeLayout>