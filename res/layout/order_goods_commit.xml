<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        style="@style/textStyle"
        android:id="@+id/order_goods_commit_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="left"
        android:paddingLeft="10dp"
        android:text="11" />

    <TextView
        style="@style/textStyle"
        android:id="@+id/order_goods_commit_address"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:text="11" />
    
    <TextView
        style="@style/textStyle"
        android:id="@+id/order_goods_commit_mess"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:text="订单详情" />
	
    <RelativeLayout
    	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
	     <ListView
		        android:id="@+id/order_goods_commit_list"
		        android:layout_width="wrap_content"    
		        android:background="#ffffff"
		        android:paddingLeft="10dp"			
		        android:layout_toLeftOf="@+id/order_goods_commit_pic"    	      
		        android:layout_height="wrap_content">
		
		 </ListView>
    		
	     <ImageView
		        android:id="@+id/order_goods_commit_pic"
		        android:layout_width="wrap_content"    
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		       />
	     
    </RelativeLayout>
    
    <View android:layout_height="0.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/order_goods_commit_v1"
		android:layout_width="wrap_content"
		android:background="#ffa8abad"/>
    <TextView
        style="@style/textStyle"
        android:id="@+id/order_goods_commit_mess1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:textColor="#ffa8abad"
        android:text="提示:到达商户位置，并出示二维码进行交易" />
</LinearLayout>
